<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:foo="http://schemas.android.com/apk/res/com.assignmentexpert"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="5dip" 
    android:background="#42aeff">
    <RelativeLayout
        android:id="@+id/thumbnail"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >

        <com.customitems.CustomTextView
            android:id="@+id/altOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:gravity="center|center"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            foo:customFont="Roboto-Regular.ttf"/>
        <com.customitems.CustomTextView
        android:id="@+id/altOrderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/altOrderId"
        android:textColor="#838B8B"
        android:textSize="14sp"
        android:textStyle="bold" 
        foo:customFont="Roboto-Regular.ttf"/>
    </RelativeLayout>
    
 <RelativeLayout
     android:layout_toLeftOf="@+id/thumbnail"
        android:id="@+id/thumbnail2"
        android:layout_alignRight="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent">
    <TextView
			    android:layout_width="1dp"
			    android:id="@+id/menu_sep1"
			    android:layout_height="50dp"
			    android:background="#FFFFFF"	
			/>
	</RelativeLayout>
	
    <com.customitems.CustomTextView
        android:id="@+id/altOrderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="@+id/altOrderPrice"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="45dp"
        android:gravity="center|center"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/thumbnail2"
        android:text="Opening"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        foo:customFont="Roboto-Medium.ttf" />
    
    
    

</RelativeLayout>