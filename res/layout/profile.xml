<?xml version="1.0" encoding="UTF-8"?>
<ScrollView 
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF">
<RelativeLayout
    android:id="@+id/new_order"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/buttonsPanel"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <Button
            android:id="@+id/btnNewOrder"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#838B83"
            android:gravity="center|center_horizontal"
            android:text="New order"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnOrdersHistory"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#838B83"
            android:gravity="center|center_horizontal"
            android:text="Orders history"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#007FFF"
            android:gravity="center|center_horizontal"
            android:text="Profile"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight=".25"
            android:background="#CD0000"
            android:gravity="center_vertical|center_horizontal"
            android:text="Log out"
            android:textColor="#FFFFFF"
            android:textSize="17dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:id="@+id/layoutLabel"
		    android:layout_below="@+id/buttonsPanel">
		    
   <TextView
	            android:id="@+id/textLabel"
	            android:text="Here you can edit your personal information"
	            android:layout_width="fill_parent"
	             android:background="#D3D3D3"
	             android:lines="2"
	             android:gravity="center_vertical|center_horizontal"
	            android:layout_height="wrap_content"
	            android:padding="10dip"
	            android:textColor="#545454"
	            android:textStyle="bold" />
   </LinearLayout>
   <LinearLayout
		    android:id="@+id/panelInteractions"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_below="@+id/layoutLabel"
		    android:background="#FFFFFF"
		    android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/productLayout"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:weightSum="1.0"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/productLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:padding="10dip"
                android:text="Login"
                android:layout_weight="0.5"
                android:textColor="#555555"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/loginTextView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:layout_weight="0.5"
                android:text=""
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/subjTimezoneLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1.0" >


            <TextView
                android:id="@+id/subjLabel"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="top|left"
                android:padding="10dip"
                android:layout_weight="0.5"
                android:text="First name"
                android:textColor="#555555"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstnameTextView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

        </LinearLayout>
        
     <LinearLayout
        android:id="@+id/lastnameLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1.0" >


            <TextView
                android:id="@+id/lastnameLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:padding="10dip"
                android:layout_weight="0.5"
                android:text="Last name"
                android:textColor="#555555"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lastnameTextView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:gravity="center|right"
                android:layout_weight="0.5"
                android:text=""
                android:paddingRight="10dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

     <LinearLayout
         android:id="@+id/categoryPostedLayout"
         android:layout_width="fill_parent"
         android:layout_height="50dp"
         android:baselineAligned="false"
         android:orientation="horizontal"
         android:weightSum="1.0" >

         <TextView
             android:id="@+id/CategoryLabel"
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:layout_weight="0.5"
             android:gravity="top|left"
             android:padding="10dip"
             android:text="Phone"
             android:textColor="#555555"
             android:textSize="15dp"
             android:textStyle="bold" />

         <TextView
             android:id="@+id/phoneTextView"
             android:layout_width="match_parent"
             android:layout_height="fill_parent"
             android:layout_weight="0.5"
             android:gravity="center|right"
             android:paddingRight="10dp"
             android:textColor="#000000"
             android:textSize="15dp"
             android:textStyle="bold" />
     </LinearLayout>

    <LinearLayout
        android:id="@+id/levelDeadlineLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1.0" >

       
            <TextView
                android:id="@+id/levelLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:padding="10dip"
                android:layout_weight="0.5"
                android:text="Time zone"
                android:textColor="#555555"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/timezoneTextView"
               android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
       
         </LinearLayout>
          <LinearLayout
        android:id="@+id/passwordLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="1.0" >

       
            <TextView
                android:id="@+id/passLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:padding="10dip"
                android:layout_weight="0.5"
                android:text="Password"
                android:textColor="#555555"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/passTextView"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:paddingRight="10dp"
                android:gravity="center|right"
                android:text=""
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />
       
         </LinearLayout>

   
       </LinearLayout>
       
</RelativeLayout>

</ScrollView>