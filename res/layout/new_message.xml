<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_order"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  
  		  
           <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:orientation="horizontal"
		    android:weightSum="1.0" 
		    android:id="@+id/panelButtons">

            <Button
                android:id="@+id/btnInfoOrder"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#838B83"
                android:gravity="center|center_horizontal"
                android:text="Info"   
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold" 
                android:layout_weight=".25"/>

            <Button
                android:id="@+id/btnInteractions"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#007FFF"
                android:gravity="center|center_horizontal"
                android:text="Assignment expert"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold" 
                android:layout_weight=".50"/>

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:background="#CD0000"
                android:gravity="center_vertical|center_horizontal"
                android:text="Close"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_weight=".25" />

     </LinearLayout>
     

	<RelativeLayout
	    android:id="@+id/panelInteractions"
	    android:layout_width="wrap_content"
	    android:layout_height="75dp"
	    android:layout_below="@+id/panelButtons"
	    android:background="#C0C0C0"
	    android:orientation="horizontal" >
		

           <LinearLayout
               android:id="@+id/deadlineLayout"
               android:layout_width="170dp"
               android:layout_height="fill_parent"
               android:orientation="vertical"
               android:weightSum="1.0" >
		   
	           <TextView
	            android:id="@+id/textLabel"
	            android:text="Deadline:"
	            android:layout_height="fill_parent"
	            android:layout_width="115dp"
	            android:layout_marginRight="10dp"
	           
	            android:layout_weight=".50" 
	            android:gravity="center_vertical|center_horizontal"
	            android:padding="10dip"
	            android:textColor="#545454"
	            android:textStyle="bold" />

	           <TextView
	               android:id="@+id/deadlineLabel"
	               android:layout_width="fill_parent"
	               android:layout_height="fill_parent"
	               android:layout_marginRight="10dp"
	               android:layout_weight=".50"
	               android:gravity="left|center_horizontal"
	               android:padding="10dip"
	               android:text="Deadline:"
	               android:textColor="#545454"
	               android:textStyle="bold" />

	</LinearLayout>
	            <Button
	                android:id="@+id/btnPay"
	                android:layout_width="75dp"
	                android:layout_height="40dp"
				      android:layout_centerVertical="true"
	                android:layout_marginLeft="5dp"
	                android:layout_marginRight="30dp"
	               
	                android:layout_toRightOf="@+id/deadlineLayout"
	                android:gravity="center_vertical|center_horizontal"
	                android:text="Pay"
	                android:textColor="#FFFFFF"
	                android:textSize="18dp"
	                android:textStyle="bold" />
	             <TextView
	            android:id="@+id/priceLabel"
	            android:text="N/A:"
	            android:layout_height="fill_parent"
	            android:layout_width="75dp"
	            android:layout_alignParentRight="true"
	            android:gravity="center_vertical|center_horizontal"
	            android:padding="10dip"
	            android:textColor="#545454"
	            android:textStyle="bold" />
	           
   </RelativeLayout>
<RelativeLayout
	    android:id="@+id/panelMessage"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/panelInteractions"
	    android:background="#FFFFFF"
	    android:orientation="horizontal" >
	              <TextView
	            android:id="@+id/interactionId"
	            android:text="Interaction"
	            android:layout_width="150dp"
	          
                android:gravity="center_vertical|center_horizontal"
	            android:layout_height="wrap_content"
	            android:padding="10dip"
	            android:textColor="#545454"
	            android:textStyle="bold" />

        <EditText
            android:id="@+id/editMessage"
            android:layout_width="280dp"
            android:layout_height="170dp"
            android:layout_below="@+id/interactionId"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:cursorVisible="true"
            android:ems="10"
            android:focusable="true"
            android:hint="Your message">
            <requestFocus />
        </EditText>
        <HorizontalScrollView
    android:id="@+id/scrollMessageFiles"
    android:layout_width="fill_parent"
    android:layout_height="65dp"
    android:layout_below="@+id/editMessage"
    android:orientation="horizontal"
    android:weightSum="1.0" >
            <LinearLayout
	    android:id="@+id/panelMessageFiles"
	    android:orientation="horizontal"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:background="#FFFFFF"
	    >
	  

                
            </LinearLayout>
            
            </HorizontalScrollView>

        <Button
            android:id="@+id/btnSendMessage"
            android:layout_width="75dp"
            android:layout_height="45dp"
            android:layout_alignLeft="@+id/editMessage"
            android:layout_below="@+id/scrollMessageFiles"
            android:gravity="center_vertical|center_horizontal"
            android:text="Send"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

         <Button
             android:id="@+id/btnAddFilesMessage"
             android:layout_width="85dp"
             android:layout_height="45dp"
             android:layout_below="@+id/scrollMessageFiles"
             android:layout_centerHorizontal="true"
             android:gravity="center_vertical|center_horizontal"
             android:text="Add files"
             android:background="#00FF7F"
             android:textColor="#FFFFFF"
             android:textSize="14dp"
             android:textStyle="bold" />

         <Button
             android:id="@+id/btnCancelNewMessage"
             android:layout_width="85dp"
             android:layout_height="45dp"
             android:layout_below="@+id/scrollMessageFiles"
             android:layout_marginLeft="14dp"
             android:layout_toRightOf="@+id/btnAddFilesMessage"
             android:gravity="center_vertical|center_horizontal"
             android:text="Cancel"
             android:textColor="#FFFFFF"
             android:textSize="14dp"
             android:textStyle="bold" />

</RelativeLayout>	    



</RelativeLayout>