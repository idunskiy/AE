<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/new_order"
    android:layout_width="wrap_content"
    android:layout_height="match_parent" >
     
    <ListView
       android:id="@android:id/list"
       android:layout_width="wrap_content"
       android:layout_height="fill_parent"
       android:background="#FFFFFF"
       android:focusable="false" 
       android:layout_below="@+id/headerPanel"
      />
           <LinearLayout
            android:id="@+id/headerPanel"
		    android:layout_width="fill_parent"
		    android:layout_height="50dp"
		    android:orientation="horizontal"
		    android:weightSum="1.0" 
		   >

            <Button
                android:id="@+id/btnNewOrder"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#007FFF"
                android:gravity="center|center_horizontal"
                android:text="New order"   
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold" 
                android:layout_weight=".25"/>

            <Button
                android:id="@+id/btnOrdersHistory"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#838B83"
                android:gravity="center|center_horizontal"
                android:text="Orders history"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold" 
                android:layout_weight=".25"/>

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:background="#838B83"
                android:gravity="center|center_horizontal"
                android:text="Profile"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_weight=".25" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" 
                android:background="#CD0000"
                android:gravity="center_vertical|center_horizontal"
                android:text="Log out"
                android:textColor="#FFFFFF"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_weight=".25" />

     </LinearLayout>
  
   </RelativeLayout>