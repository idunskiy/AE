<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >
 
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dip" >

        <!-- View Title Label -->
		<ImageView
           android:id="@+id/imageView1"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
            android:background="#000000"
           android:src="@drawable/stand_logo" />
        <TextView
            android:id="@+id/login_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <!-- Login Button -->


        <EditText
            android:id="@+id/restoreEmail"
            android:layout_width="250dp"
            android:text="E-mail"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            
            android:layout_marginTop="165dp"
            android:ems="10" />
 			
            <ImageView android:id="@+id/captchaView" 
                android:layout_marginTop="250dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                >
            </ImageView>
        <Button
            android:id="@+id/btnProceed"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dip"
            android:text="Proceed" />

        <!-- Link to Registration Screen -->

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/login_error"
            android:background="#838B83"
            android:text="Login"
            android:gravity="left|center_horizontal" 
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold" 
            android:layout_marginTop="23dp"
            
           />

        <Button
            android:id="@+id/btnLinkToRegisterScreen"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnLogin"
            android:layout_alignBottom="@+id/btnLogin"
            android:layout_marginLeft="75dp"
            
            
            android:background="#838B83"
            android:text="Register"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btnClose"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btnLinkToRegisterScreen"
            android:layout_alignBottom="@+id/btnLinkToRegisterScreen"
            android:layout_marginLeft="150dp"
            android:gravity="center_vertical|center_horizontal" 
            android:layout_alignParentRight="true"
            android:background="#CD0000"
            android:text="Close"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notificationText"
            android:layout_width="wrap_content"
            android:textColor="#000000"
            android:layout_height="wrap_content"
             android:textSize="17dp"
            android:layout_marginTop="110dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Enter e-mail address by which your account was registered" />

        <EditText
            android:id="@+id/captcha"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/restoreEmail"
            android:layout_alignTop="@+id/captchaView"
            android:ems="10" >

            <requestFocus />
        </EditText>

    </RelativeLayout>
 
</ScrollView>