<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<ScrollView 
    android:id="@+id/scroll"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF" >
 
    <RelativeLayout  
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="10dip" >


        <TextView
            android:id="@+id/login_error"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
	 
        <TableLayout
            android:layout_marginTop="40dp"
                	android:id="@+id/table"
                  android:layout_width="fill_parent"
                 android:layout_height="fill_parent"
                  android:background="#FFFFFF"
                  >
       
        <TableRow android:id="@+id/row" android:layout_height="1px">
            <TextView 
                android:text="ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"/>
        </TableRow>
        <TableRow android:layout_height="1px">
            <TextView
                 android:text="Title"
                android:layout_span="2" android:layout_height="1px" 
                android:layout_width="wrap_content"
                    
                     />
        </TableRow>
        <TableRow android:layout_height="1px">
            <TextView android:layout_width="wrap_content"
                 android:text="Price"
                android:layout_span="2" android:layout_height="1px"
                     
                     />
        </TableRow>
        <TableRow android:layout_height="1px">
            <TextView android:layout_width="wrap_content"
                android:text="Status"
                android:layout_span="2" android:layout_height="1px"
                    
                     />
        </TableRow>
        
		</TableLayout>
		 </RelativeLayout>
 
</ScrollView>

      
            
            <Button
                android:id="@+id/btnNewOrder"
                android:layout_width="120dp"
                android:layout_height="55dp"
                android:background="#838B83"
                android:gravity="center|center_horizontal"
                android:text="New order"
                android:layout_toLeftOf="@+id/btnOrdersHistory"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnOrdersHistory"
                android:layout_width="82dp"
                android:layout_height="55dp"
                android:background="#007FFF"
                android:gravity="center|center_horizontal"
                android:layout_toLeftOf="@+id/btnProfile"
                android:text="Orders history"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnProfile"
                android:layout_width="90dp"
                android:layout_height="55dp"
                
                android:background="#838B83"
                android:gravity="center|center_horizontal"
                android:text="Profile"
                android:layout_toLeftOf="@+id/btnClose"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                
                android:background="#CD0000"
                android:gravity="center_vertical|center_horizontal"
                android:text="Close"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:textStyle="bold" />

     

   </RelativeLayout>